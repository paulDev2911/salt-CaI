{% set ak = pillar.get('authentik', {}) %}

{{ ak.domain }} {
    reverse_proxy localhost:{{ ak.ports.http }} {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Self-signed cert f√ºr internal Tailscale
    tls internal
}