services:
  db:
    image: mariadb:10.6
    restart: always
    command: --transaction-isolation=READ-COMMITTED --log-bin=binlog --binlog-format=ROW
    volumes:
      - db:/var/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD={{ pillar['nextcloud']['db_root_password'] }}
      - MYSQL_PASSWORD={{ pillar['nextcloud']['db_password'] }}
      - MYSQL_DATABASE=nextcloud
      - MYSQL_USER=nextcloud

  app:
    image: nextcloud
    restart: always
    ports:
      - "{{ pillar['nextcloud']['bind_ip'] }}:8080:80"
    links:
      - db
    volumes:
      - nextcloud:/var/www/html
    environment:
      - MYSQL_PASSWORD={{ pillar['nextcloud']['db_password'] }}
      - MYSQL_DATABASE=nextcloud
      - MYSQL_USER=nextcloud
      - MYSQL_HOST=db
      - NEXTCLOUD_ADMIN_USER={{ pillar['nextcloud']['admin_user'] }}
      - NEXTCLOUD_ADMIN_PASSWORD={{ pillar['nextcloud']['admin_password'] }}
      - NEXTCLOUD_TRUSTED_DOMAINS={{ pillar['nextcloud']['trusted_domains'] }}
      - OVERWRITEPROTOCOL=http

volumes:
  nextcloud:
  db: