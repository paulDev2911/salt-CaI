---
# Headscale Configuration
# Managed by SaltStack - DO NOT EDIT MANUALLY

{% set hs = pillar.get('headscale', {}) %}

# Public server URL for clients to connect
server_url: {{ hs.server_url }}

# Listen on port 8080 (Caddy forwards from 443)
listen_addr: {{ hs.get('listen_addr', '0.0.0.0:8080') }}

# Metrics endpoint (keep internal)
metrics_listen_addr: {{ hs.get('metrics_listen_addr', '127.0.0.1:9090') }}

# gRPC for remote CLI management
grpc_listen_addr: {{ hs.get('grpc_listen_addr', '0.0.0.0:50443') }}
grpc_allow_insecure: false

# Noise protocol configuration
noise:
  private_key_path: /var/lib/headscale/noise_private.key

# IP allocation for Tailscale network
prefixes:
  v4: {{ hs.get('prefix_v4', '100.64.0.0/10') }}
  v6: {{ hs.get('prefix_v6', 'fd7a:115c:a1e0::/48') }}
  allocation: {{ hs.get('allocation_strategy', 'sequential') }}

# DERP relay configuration
derp:
  server:
    enabled: false
  
  urls:
    - https://controlplane.tailscale.com/derpmap/default
  
  paths: []
  
  auto_update_enabled: true
  update_frequency: 3h

disable_check_updates: false

ephemeral_node_inactivity_timeout: 30m

# Database configuration
database:
  type: sqlite
  debug: false
  
  gorm:
    prepare_stmt: true
    parameterized_queries: true
    skip_err_record_not_found: true
    slow_threshold: 1000
  
  sqlite:
    path: /var/lib/headscale/db.sqlite
    write_ahead_log: true
    wal_autocheckpoint: 1000

# TLS/ACME - DEAKTIVIERT (Caddy managed HTTPS)
# NICHT aktivieren - Caddy Ã¼bernimmt das!
tls_cert_path: ""
tls_key_path: ""

# Logging
log:
  level: {{ hs.get('log_level', 'info') }}
  format: {{ hs.get('log_format', 'json') }}

# ACL Policy
policy:
  mode: file
  path: {{ hs.get('acl_policy_path', '/etc/headscale/acl.json') }}

# DNS and MagicDNS configuration
dns:
  magic_dns: true
  base_domain: {{ hs.dns.base_domain }}
  override_local_dns: true
  
  nameservers:
    global:
{% for ns in hs.dns.get('nameservers', ['1.1.1.1', '1.0.0.1']) %}
      - {{ ns }}
{% endfor %}
    
    split: {}
  
  search_domains: []
  extra_records: []

# Unix socket for CLI
unix_socket: /var/run/headscale/headscale.sock
unix_socket_permission: "0770"

# Logtail (disabled)
logtail:
  enabled: false

# WireGuard port randomization
randomize_client_port: {{ hs.get('randomize_client_port', false) | lower }}

# Taildrop file sharing
taildrop:
  enabled: {{ hs.get('taildrop_enabled', true) | lower }}